<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox alignment="CENTER_LEFT" minHeight="40"
	style="-fx-background-color: white; -fx-border-width: 0 0 1 0; -fx-border-color: gray;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="it.fmoon.fxapp.controllers.appmenu.AppMenuItemController"
	fx:id="panel">
	 <properties>
        <controller><fx:reference source="controller" /></controller> 
    </properties>
	<children>
		<FontIcon fx:id="icon" iconColor="rgb(5, 29, 184)"
			iconSize="24">
		</FontIcon>
		<Label fx:id="label" text="Label" textFill="rgb(5, 29, 184)" />
		<FontIcon />
	</children>
	<effect>
		<Glow />
	</effect>
	<cursor>
		<Cursor fx:constant="HAND" />
	</cursor>
</HBox>
