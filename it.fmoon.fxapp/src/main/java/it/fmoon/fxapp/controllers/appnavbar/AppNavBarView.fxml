<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox alignment="CENTER" prefHeight="42.0"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="it.fmoon.fxapp.controllers.appnavbar.AppNavBarController"
	fx:id="navBar"
	style="-fx-background-color: rgba(5, 29, 184, 0.41);">
	<children>
		<Button contentDisplay="RIGHT" maxWidth="40.0" minWidth="40.0"
			mnemonicParsing="false" onAction="#onMenu" prefWidth="50.0"
			style="-fx-background-color: transparent; -fx-cursor: hand;"
			fx:id="menuButton">
			<graphic>
				<FontIcon iconColor="WHITE" iconLiteral="fa-bars" iconSize="24" />
			</graphic>
		</Button>

		<HBox fx:id="breadcrumb" alignment="CENTER_LEFT"
			prefHeight="100.0" HBox.hgrow="ALWAYS">
			<children>
				<Label text="Label" />
			</children>
		</HBox>
		<HBox alignment="CENTER_RIGHT" prefHeight="42.0" prefWidth="84.0">
			<children>


				<Button maxWidth="40.0" minWidth="40.0"
					mnemonicParsing="false" onAction="#onLogin" prefHeight="25.0"
					prefWidth="50.0"
					style="-fx-background-color: transparent; -fx-cursor: hand;">
					<graphic>
						<FontIcon iconColor="WHITE" iconLiteral="fa-user"
							iconSize="24" />
					</graphic>
				</Button>
				<Button maxWidth="40.0" minWidth="40.0"
					mnemonicParsing="false" onAction="#onClose" prefHeight="25.0"
					prefWidth="50.0"
					style="-fx-background-color: transparent; -fx-cursor: hand;">
					<graphic>
						<FontIcon iconColor="WHITE" iconLiteral="fa-chevron-left"
							iconSize="24" />
					</graphic>

				</Button>
			</children>
		</HBox>
	</children>
</HBox>
